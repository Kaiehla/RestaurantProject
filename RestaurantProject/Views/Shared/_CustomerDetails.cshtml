@model Customer

<div class="row mt-2">
     <input type="hidden" id="id" value="@Model.Id" asp-for="Id">

    <div class="col-6 mt-2">
        <label for="firstName" class="form-label">First name</label>
        <input type="text" class="form-control" id="firstName" value="@Model.FirstName" required="" asp-for="FirstName">
    </div>

    <div class="col-6 mt-2">
        <label for="lastName" class="form-label">Last name</label>
        <input type="text" class="form-control" id="lastName" value="@Model.LastName" required="" asp-for="LastName">
    </div>

    <div class="col-6 mt-2">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" value="@Model.PhoneNumber" required="" asp-for="PhoneNumber" pattern="[0][9][0-9]{9}" maxlength="11">
    </div>

    <div class="col-12 mt-2">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" value="@Model.Email" required="" asp-for="Email">
    </div>

</div>

<div class="row mt-2">
    <div class="col">
        <label for="cityAdd" class="form-label">City Address</label>
        <input type="text" class="form-control" id="cityAdd" value="@Model.CityAdd" required="" asp-for="CityAdd">
    </div>
</div>