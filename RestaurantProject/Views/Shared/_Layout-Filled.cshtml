<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantProject.styles.css" asp-append-version="true" />
     <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>

@*     DITO YUNG MGA STATICS BETWEEN PAGES *@
    <!-- Navbar -->
    <header>
        <div class="nav-bar bg-dark">
            <div class="text-white d-md-block">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/lib/logo_white.svg" width="120" height="120"/>
                </a>
            </div>
        </div>
    </header>
       @* NAVIGATION BAR ENDS *@

    <div>
        <div style="margin-top:100px;"></div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <br />
    <br />
    <br />

    @* START OF FOOTER *@
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2023 - RestaurantProject
            - <a asp-area="" asp-controller="Home" asp-action="BookForm" class="text-dark text-decoration-none">BookForm</a>
            - <a asp-area="" asp-controller="Reservation" asp-action="ReserveView" class="text-dark text-decoration-none">Reservation</a>
            - <a asp-area="" asp-controller="Customer" asp-action="CustomerView" class="text-dark text-decoration-none">Customer</a>
            - <a asp-area="" asp-controller="Table" asp-action="TableView" class="text-dark text-decoration-none">Tables</a>
            - <a asp-area="" asp-controller="Package" asp-action="PackageView" class="text-dark text-decoration-none">Package</a>
        </div>

    </footer>
    @* END OF FOOTER *@
    @* END OF FOOTER *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
