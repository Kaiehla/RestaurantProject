@model List<Customer>
@{
    ViewData["Title"] = "Customer View";
}

@*NAVBAR*@
<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 bg-light">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-dark min-vh-100">
                <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Admin Dashboard</span>
                </a>

                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li>
                        <a asp-action="ReserveView" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Reservations</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="CustomerView" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Customers</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="TableView" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-box"></i> <span class="ms-1 d-none d-sm-inline">Tables</span>
                        </a>
                    </li>

                    <li>
                        <a href="#" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Orders</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="PackageView" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Package</span>
                        </a>
                    </li>
                </ul>
                <hr>

                <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">loser</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        @*Content Area*@
        <div class="col py-3 ms-3">
            <h3>@ViewData["Title"]</h3>

            @*Table*@
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th> @*kunin yung equivalent firstname, ang ipapakita dito yung customer first name*@
                        <th scope="col">Last Name</th> @*kunin yung equivalent lastname, ang ipapakita dito yung customer last name*@
                        <th scope="col">Email</th> @*kunin yung equivalent email, ang ipapakita dito yung customer email*@
                        <th scope="col">Phone</th> @*kunin yung equivalent phone, ang ipapakita dito yung customer phone num*@
                        <th scope="col">City Address</th> @*kunin yung equivalent cityadd, ang ipapakita dito yung customer add*@
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>


                <tbody>
                    @{var count = 1;}
                    @foreach (var data in Model)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@data.Id</td>
                            <td>@data.FirstName</td>
                            <td>@data.LastName</td>
                            <td>@data.Email</td>
                            <td>@data.PhoneNumber</td>
                            <td>@data.CityAdd</td>
                            <td class="text-center">
                                @*Edit*@
                                <a data-bs-toggle="modal" data-bs-target="#editCustomer">
                                    <i class="bi bi-pencil text-success"></i>
                                </a>

                                @*Delete*@
                                <a data-bs-toggle="modal" data-bs-target="#delCustomer">
                                    <i class="bi bi-trash text-danger"></i>
                                </a>
                            </td>
                        </tr>
                        count += 1;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editCustomer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Customer Info</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <label for="firstName" class="form-label">First name</label>
                                    <input type="text" class="form-control" id="firstName" value="Seishiro" required="">
                                </div>

                                <div class="col-6">
                                    <label for="lastName" class="form-label">Last name</label>
                                    <input type="text" class="form-control" id="lastName" value="Nagi" required="">
                                </div>

                                <div class="col-6 mt-2">
                                    <label for="phone" class="form-label">Phone</label>
                                    <input type="text" class="form-control" id="phone" value="09123456789" required="">
                                </div>

                                <div class="col-6 mt-2">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="email" value="seishironagi@mail.com" required="">
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    <label for="cityAdd" class="form-label">City Address</label>
                                    <input type="text" class="form-control" id="cityAdd" value="Espana, Manila" required="">
                                </div>
                            </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <a class="btn btn-success-secondary" asp-action="CustomerView">Cancel</a>
                    <a class="btn btn-success" asp-action="CustomerView">Update</a>
                </div>
            </div>
        </div>
    </div>  @*end of modal*@

    <!-- Delete Modal -->
    <div class="modal fade" id="delCustomer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Customer</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="lead">Are you sure you want to delete this customer?</p>
                    <p>Customer ID: 2 <br />Customer: Karylle Legaspino</p>
                </div>

                <div class="modal-footer">
                    <a class="btn btn-danger-secondary" asp-action="CustomerView">Cancel</a>
                    <a class="btn btn-danger" asp-action="CustomerView">Delete</a>
                </div>
            </div>
        </div>
    </div>

    @*end of overall*@
</div>