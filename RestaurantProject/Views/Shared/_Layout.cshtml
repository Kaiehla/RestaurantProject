<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantProject.styles.css" asp-append-version="true" />
     <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body>

@*     DITO YUNG MGA STATICS BETWEEN PAGES *@

        @* NAVIGATION BAR START *@
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Restaurant Project</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door mx-auto" width="24" height ="24"></i></br>
                                Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="BookForm">
                                <i class="bi bi-pencil-square mx-auto" width="24" height ="24"></i></br>
                                BookForm</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Customer" asp-action="CustomerView">
                                <i class="bi bi-people mx-auto" width="24" height ="24"></i></br>
                                Customer</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Reservation" asp-action="ReserveView">
                                    <i class="bi bi-table mx-auto" width="24" height="24"></i></br>
                                    Reservation
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Table" asp-action="TableView">
                                    <i class="bi bi-box mx-auto" width="24" height="24"></i></br>
                                    Tables
                                </a>
                            </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Package" asp-action="PackageView">
                                <i class="bi bi-grid m-xl-auto" width="24" height="24"></i> </br>
                                Package
                            </a>
                        </li>
                        </ul>
                    </div>
                </div>
            </nav>
       </header>
       @* NAVIGATION BAR ENDS *@

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <br />
    <br />
    <br />

   @* START OF FOOTER *@
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2023 - RestaurantProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* END OF FOOTER *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
